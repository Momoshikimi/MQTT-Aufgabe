#include "WiFi.h"
#include "PubSubClient.h"

const char* ssid = "Wokwi-GUEST";
const char* password = "";

const char *BROKER_URL = "broker.hivemq.com";
const uint16_t BROKER_PORT = 1883;

WiFiClient wifiClient;
PubSubClient mqttClient(wifiClient);

void setup() {
  Serial.begin(115200);
  WiFi.begin(ssid, password);

  Serial.print("Verbindungsaufbau mit dem WLAN...");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWLAN-Verbindung aufgebaut");

  setupMqtt();
}

void loop() {
  if (!mqttClient.connected()) {
    Connect2Mqtt();
  }
  mqttClient.loop();
}

void mqttCallback (char* topic, byte* payload, unsigned int length) {
  Serial.print("Callback â€“ Nachricht: ");
  for (int i = 0; i < length; i++) {
    Serial.print((char)payload[i]);
  }
  Serial.println();
}

void setupMqtt() {
  mqttClient.setServer(BROKER_URL, BROKER_PORT);
  mqttClient.setCallback(mqttCallback);
}

void Connect2Mqtt() {
  while (!mqttClient.connected()) {
    char clientId[100] = "\0";
    if (mqttClient.connect(clientId)) {
      mqttClient.subscribe("<your topics>");
      Serial.println("Verbindung zum MQTT-Server aufgebaut");
    } else {
      delay(5000);
    }
  }
}
